<!DOCTYPE html>
<html>
<head>
  <title>Foodlobby</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "foodlobby" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <% if current_user %>
  <ul class="navigation" style="float: right">
    <li><%= link_to "sign out #{current_user}", destroy_user_session_url %></li>
  </ul>
  <ul class="navigation">
    <li><%= link_to_unless_current "households", households_url %></li>
    <li><%= link_to_unless_current "members", members_url %></li>
    <li><%= link_to_unless_current "all transactions", transactions_url %></li>
  </ul>
  <% end %>

<div id="content">
  <%= yield %>
</content>

</body>
</html>
