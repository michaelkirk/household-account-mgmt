<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
  <%= f.label :active, "Active Member" %>
  <%= f.check_box :active %><br />
  </div>

  <div class="field">
    <%= f.label :phone1, "Phone 1" %>
    <%= f.text_field :phone1, :size=>15 %>

    <%= f.label :phone2, "Phone 2" %>
    <%= f.text_field :phone2, :size=>15 %>
  </div>
    <div class="field">
    <%= f.label :address1, "Address Line 1" %><br />
    <%= f.text_field :address1, :size=>50 %>
  </div>
    <div class="field">
    <%= f.label :address2, "Address Line 2" %><br />
    <%= f.text_field :address2, :size=>50 %>
  </div>
    <div class="field">
    <%= f.label :city, "City" %>
    <%= f.text_field :city, :size=>24 %>,
    <%= f.label :state, "State" %>
    <%= f.text_field :state, :size=>2 %>
    <%= f.label :zip, "Zip" %>
    <%= f.text_field :zip, :size=>9 %>
  </div>

  <div class="field">
    <b>Household:</b><br />
    <% if @member.household %>
      <ol>
      <% @member.household.members.each do |m| %>
        <li><%= link_to m.name, m %></li>
      <% end %>
      </ol>
    <% end %>

    <% if @member.new_record? %>
      <%= f.label :household_id, "Add this member to an existing household?" %><br />
      <%= f.collection_select(:household_id, Member.all, :household_id, :name, {:include_blank => 'No, create a new household.'} ) %>
    <% else %>
      <%= f.label :household_id, "Move this member to a different existing household?" %><br />
      <%= f.collection_select(:household_id, Member.all, :household_id, :name, {:include_blank => 'Put this member in a new household'} ) %>
    <% end %>
    <br /><br />

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
